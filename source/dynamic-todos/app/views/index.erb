<div id="todo">
  <div class="toolbox">
    <form action="/todo" method="post">
      <input type="text" class="todo" name="content" placeholder="Put your todo item here!"/>
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">
    <% if @todos %>
      <%@todos.each do |todo|%>
      <div id="<%=todo.id%>">
        <h2><%= todo.todo_content %></h2>
        <ul>
          <li><a href="/todo/<%=todo.id%>" class="delete">Delete</a></li>
          <li><a href="#" class="complete">Complete</a></li>
        </ul>
      </div>
      <%end%>
    <%end%>
  </div>

</div>
