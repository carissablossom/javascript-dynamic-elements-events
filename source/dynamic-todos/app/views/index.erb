<div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input type="text" class="todo" name="todo_content" value=""/>
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">
    <% @todos.each do |todo| %>
      <%= erb :_todos, locals: {todo: todo}, layout: false %>
    <% end %>
  </div>

  <div id="todo_template">

  </div>
</div>
