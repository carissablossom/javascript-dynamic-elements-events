<div id="todo">
  <div class="toolbox">
    <form id="todo-form" action="/add_todo" method="post">
      <input type="text" class="todo" placeholder="Put your todo item here!"/>
      <!-- <input type="submit" value="Add Todo"/> -->
      <button id="create-todo" class="add" type="submit">Add Todo</button>
    </form>
  </div>

  <div class="todo_list">
    <%if @todo_list%>
      <%@todo_list.each do |todo|%>
        <div id="<%=todo.id%>">
          <h2><%=todo.todo_content%></h2>
          <p>completed?: <%=todo.completed%></p>
          <li><a href="todo/<%=todo.id%>" class="delete">Delete</a></li>
          <li><a href="todo/<%=todo.id%>" class="complete">Complete</a></li>
        </div>
      <%end%>
    <%end%>

  </div>

  <div id="todo_template" style="display: none;">
    <div class="todo">
      <h2>Todo Name</h2>
      <ul>
        <li><a href="#" class="delete">Delete</a></li>
        <li><a href="#" class="complete">Complete</a></li>
      </ul>
    </div>
  </div>
</div>
