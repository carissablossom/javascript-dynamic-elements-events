<div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input type="text" name="content" placeho="Put your todo item here!"/>
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">
    <% @all_todos.each do |todo| %>
    <%= erb :'_todo_item', :locals => {:todo => todo }, layout: false %>
    <% end  %>
  </div>

</div>
